{
    "name": "fof/terms",
    "description": "Ask users to accept terms of use before using the forum",
    "keywords": [
        "extension",
        "flarum",
        "terms",
        "tos",
        "policy"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/terms/issues",
        "source": "https://github.com/FriendsOfFlarum/terms",
        "forum": "https://discuss.flarum.org/d/11714"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^1.8.3"
    },
    "replace": {
        "flagrow/terms": "*"
    },
    "conflict": {
        "reflar/user-management": "^0.1.0"
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF Terms",
            "category": "feature",
            "icon": {
                "name": "fas fa-paperclip",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/11714"
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "autoload": {
        "psr-4": {
            "FoF\\Terms\\": "src/"
        }
    },
    "require-dev": {
        "flarum/phpstan": "*",
        "blomstra/gdpr": "@beta"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
